{
  "name": "synology-downloadstation-cli",
  "version": "0.2.0",
  "description": "A React-powered OpenTUI client for Synology Download Station",
  "type": "module",
  "bin": {
    "synology-ds": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "rm -rf dist && bun build src/index.tsx --outdir dist --target bun --minify --banner \"js=#!/usr/bin/env bun\"",
    "lint": "bunx tsc --noEmit",
    "start": "bun run dist/index.js",
    "test": "bun test"
  },
  "packageManager": "bun@1.2.17",
  "dependencies": {
    "@opentui/core": "^0.1.36",
    "@opentui/react": "^0.1.36",
    "commander": "^12.1.0",
    "react": "^19.2.0",
    "strip-ansi": "^7.1.0",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/node": "^20.17.0",
    "@types/react": "^19.0.0",
    "typescript": "^5.6.3"
  }
}
